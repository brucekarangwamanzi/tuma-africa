{
  "name": "tuma-africa-link-cargo",
  "version": "1.0.0",
  "description": "Full-stack cargo and product ordering system connecting African customers to Asian suppliers",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "nodemon backend/server.js",
    "frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "install-all": "npm install && cd frontend && npm install",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sharp": "^0.32.5",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "cargo",
    "e-commerce",
    "africa",
    "asia",
    "logistics"
  ],
  "author": "Tuma-Africa Link Cargo",
  "license": "MIT"
}
